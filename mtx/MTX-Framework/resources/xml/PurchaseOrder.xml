<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<jmapper>
	<configuration>
				<inoutformat>xml2xml</inoutformat>
			<inputdefinition>input.orders.xsd</inputdefinition>
			<outputdefinition>output.orders.xsd</outputdefinition>
			
		</configuration>

<AggregateFunctions>
<AggregateFunction>
<AggregateFunctionName>AVG</AggregateFunctionName>
<input>saleprice,discount,tax</input>
<output>avg</output>
</AggregateFunction>
<AggregateFunction>
<AggregateFunctionName>SUM</AggregateFunctionName>
<input>saleprice,discount,tax</input>
<output>totalofsalepricetax</output>
</AggregateFunction>
</AggregateFunctions>

	<class name="output.OutOrders$OutOrder">
		<attribute name="poorderno">
			<value name="orderno"/>
		</attribute>
		<attribute name="ordername">
			<value name="ordername"/>
		</attribute>

		<attribute name="ponumber">
			<value name="ponumber"/>
		</attribute>
		<attribute name="memberno">
			<value name="customerno"/>
		</attribute>
        <attribute name="totalofsalepricetax">
			<value name="totalofsalepricetax"/>
		</attribute>
		  <attribute name="avg">
			<value name="avg"/>
		</attribute>
		  <attribute name="getresponse">
			<value name="getresponse"/>
		</attribute>
		  <attribute name="postresponse">
			<value name="postresponse"/>
		</attribute>

		<attribute name="zipcode">
	 <value name="${address.zipcode}"/>
<!-- 	<value name="streetno"/> -->
	</attribute>
		<attribute name="city">
	 <value name="${address.city}"/>
<!-- 	 <value>return ${address.city} + " " + ${address.streetno};</value>-->
